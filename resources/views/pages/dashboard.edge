<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Accueil / X
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
  </head>
  <body class="bg-black text-white">
    <div class="flex min-h-screen max-w-[1280px] mx-auto">
      <!-- Sidebar Left -->
      <div class="w-[275px] flex flex-col fixed h-screen px-3 pt-1">
        <!-- X Logo -->
        <div class="p-3 mb-1">
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="white">
            <path
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            />
          </svg>
        </div>

        <!-- Navigation Menu -->
        <nav class="flex flex-col gap-1">
          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 9c-2.209 0-4 1.791-4 4s1.791 4 4 4 4-1.791 4-4-1.791-4-4-4zm0 6c-1.105 0-2-.895-2-2s.895-2 2-2 2 .895 2 2-.895 2-2 2zm0-13.304L.622 8.807l1.06 1.696L3 9.679V19.5C3 20.881 4.119 22 5.5 22h13c1.381 0 2.5-1.119 2.5-2.5V9.679l1.318.824 1.06-1.696L12 1.696zM19 19.5c0 .276-.224.5-.5.5h-13c-.276 0-.5-.224-.5-.5V8.429l7-4.375 7 4.375V19.5z"
              />
            </svg>
            <span class="text-xl font-normal">Accueil</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M10.25 3.75c-3.59 0-6.5 2.91-6.5 6.5s2.91 6.5 6.5 6.5c1.795 0 3.419-.726 4.596-1.904 1.178-1.177 1.904-2.801 1.904-4.596 0-3.59-2.91-6.5-6.5-6.5zm-8.5 6.5c0-4.694 3.806-8.5 8.5-8.5s8.5 3.806 8.5 8.5c0 1.986-.682 3.815-1.824 5.262l4.781 4.781-1.414 1.414-4.781-4.781c-1.447 1.142-3.276 1.824-5.262 1.824-4.694 0-8.5-3.806-8.5-8.5z"
              />
            </svg>
            <span class="text-xl font-normal">Explorer</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M19.993 9.042C19.48 5.017 16.054 2 11.996 2s-7.49 3.021-7.999 7.051L2.866 18H7.1c.463 2.282 2.481 4 4.9 4s4.437-1.718 4.9-4h4.236l-1.143-8.958zM12 20c-1.306 0-2.417-.835-2.829-2h5.658c-.412 1.165-1.523 2-2.829 2zm-6.866-4l.847-6.698C6.364 6.272 8.941 4 11.996 4s5.627 2.268 6.013 5.295L18.864 16H5.134z"
              />
            </svg>
            <span class="text-xl font-normal">Notifications</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M1.998 5.5c0-1.381 1.119-2.5 2.5-2.5h15c1.381 0 2.5 1.119 2.5 2.5v13c0 1.381-1.119 2.5-2.5 2.5h-15c-1.381 0-2.5-1.119-2.5-2.5v-13zm2.5-.5c-.276 0-.5.224-.5.5v2.764l8 3.638 8-3.636V5.5c0-.276-.224-.5-.5-.5h-15zm15.5 5.463l-8 3.636-8-3.638V18.5c0 .276.224.5.5.5h15c.276 0 .5-.224.5-.5v-8.037z"
              />
            </svg>
            <span class="text-xl font-normal">Messages</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M4 4.5C4 3.12 5.119 2 6.5 2h11C18.881 2 20 3.12 20 4.5v18.44l-8-5.71-8 5.71V4.5zM6.5 4c-.276 0-.5.22-.5.5v14.56l6-4.29 6 4.29V4.5c0-.28-.224-.5-.5-.5h-11z"
              />
            </svg>
            <span class="text-xl font-normal">Signets</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M7.501 19.917L7.471 21H.472l.029-1.027c.184-6.618 3.736-8.977 7-8.977.963 0 1.95.212 2.87.672-.444.478-.851 1.03-1.212 1.656-.507-.204-1.054-.329-1.658-.329-2.767 0-4.57 2.223-4.938 6.004H7.56c-.023.302-.05.599-.059.917zm15.998.056L23.528 21H9.472l.029-1.027c.184-6.618 3.736-8.977 7-8.977s6.816 2.358 7 8.977zM21.437 19c-.367-3.781-2.17-6.004-4.938-6.004s-4.57 2.223-4.938 6.004h9.875zm-4.938-9c-.799 0-1.527-.279-2.116-.73-.836-.64-1.384-1.638-1.384-2.77 0-1.93 1.567-3.5 3.5-3.5s3.5 1.57 3.5 3.5c0 1.132-.548 2.13-1.384 2.77-.589.451-1.317.73-2.116.73zm-1.5-3.5c0 .827.673 1.5 1.5 1.5s1.5-.673 1.5-1.5-.673-1.5-1.5-1.5-1.5.673-1.5 1.5zM7.5 3C9.433 3 11 4.57 11 6.5S9.433 10 7.5 10 4 8.43 4 6.5 5.567 3 7.5 3zm0 2C6.673 5 6 5.673 6 6.5S6.673 8 7.5 8 9 7.327 9 6.5 8.327 5 7.5 5z"
              />
            </svg>
            <span class="text-xl font-normal">Communautés</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              />
            </svg>
            <span class="text-xl font-normal">Premium</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 1.696L.622 8.807l1.06 1.696L3 9.679V19.5C3 20.881 4.119 22 5.5 22h13c1.381 0 2.5-1.119 2.5-2.5V9.679l1.318.824 1.06-1.696L12 1.696zM12 16.5c-1.933 0-3.5-1.567-3.5-3.5s1.567-3.5 3.5-3.5 3.5 1.567 3.5 3.5-1.567 3.5-3.5 3.5z"
              />
            </svg>
            <span class="text-xl font-normal">Organisations</span>
          </a>

          <a
            href="{{ route('profil.view') }}"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M5.651 19h12.698c-.337-1.8-1.023-3.21-1.945-4.19C15.318 13.65 13.838 13 12 13s-3.317.65-4.404 1.81c-.922.98-1.608 2.39-1.945 4.19zm.486-5.56C7.627 11.85 9.648 11 12 11s4.373.85 5.863 2.44c1.477 1.58 2.366 3.8 2.632 6.46l.11 1.1H3.395l.11-1.1c.266-2.66 1.155-4.88 2.632-6.46zM12 4c-1.105 0-2 .9-2 2s.895 2 2 2 2-.9 2-2-.895-2-2-2zM8 6c0-2.21 1.791-4 4-4s4 1.79 4 4-1.791 4-4 4-4-1.79-4-4z"
              />
            </svg>
            <span class="text-xl font-normal">Profil</span>
          </a>

          <a
            href="#"
            class="flex items-center gap-5 px-3 py-3 rounded-full hover:bg-gray-900 transition-colors"
          >
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
              <circle cx="17" cy="12" r="1.5" />
              <circle cx="12" cy="12" r="1.5" />
              <circle cx="7" cy="12" r="1.5" />
              <path
                d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm0-2c-4.418 0-8-3.582-8-8s3.582-8 8-8 8 3.582 8 8-3.582 8-8 8z"
              />
            </svg>
            <span class="text-xl font-normal">Plus</span>
          </a>
        </nav>

        <!-- Post Button -->
        <button
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-full py-3 px-8 mt-4 w-[90%] text-[17px] transition-colors"
        >
          Poster
        </button>

        <!-- User Profile at Bottom -->
        <div
          class="mt-auto mb-4 flex items-center gap-3 p-3 rounded-full hover:bg-gray-900 cursor-pointer transition-colors"
        >
          <div class="w-10 h-10 rounded-full bg-gray-600">
          </div>
          <div class="flex-1">
            <div class="font-bold text-lg">

              @if(auth.isAuthenticated)
                <p>
                  {{ auth.user.fullname }}
                </p>
              @end
              
            </div>
            <div class="text-gray-500 text-sm">
              @if(auth.isAuthenticated)
                <p>
                  {{ `@${auth.user.fullname}` }}
                </p>
              @end
            </div>
          </div>
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <circle cx="12" cy="12" r="1.5" />
            <circle cx="6" cy="12" r="1.5" />
            <circle cx="18" cy="12" r="1.5" />
          </svg>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="flex flex-1 ml-[275px]">
        <!-- Main Content Center -->
        <div class="flex-1 border-l border-r border-gray-700 max-w-[600px] min-w-0">
          <!-- Header Tabs -->
          <div class="sticky top-0 bg-black/80 backdrop-blur-md z-10 border-b border-gray-700">
            <div class="flex">
              <div
                class="flex-1 text-center py-4 font-bold hover:bg-gray-900 cursor-pointer border-b-4 border-blue-500 transition-colors"
              >
                Pour vous
              </div>
              <div class="flex-1 text-center py-4 text-gray-500 hover:bg-gray-900 cursor-pointer transition-colors">
                Abonnements
              </div>
            </div>
          </div>

          <!-- Tweet Composer -->

          <form
            action="/tweets"
            method="POST"
            enctype="multipart/form-data"
            class="border-b border-gray-700 p-4"
          >
            {{ csrfField() }}
            <div class="flex gap-3">
              <!-- Avatar de l'utilisateur -->
              <div class="w-12 h-12 rounded-full flex-shrink-0 overflow-hidden">
                <img
                  src="{{ auth.user.avatarUrl || '/default-avatar.png' }}"
                  alt="Avatar"
                  class="w-full h-full object-cover"
                />
              </div>

              <!-- Zone de saisie -->
              <div class="flex-1">
                <input
                  type="text"
                  name="content"
                  placeholder="What's happening?"
                  class="bg-transparent text-xl outline-none w-full text-white placeholder-gray-600 mb-4"
                  required
                />
                <!-- Zone d'aperçu de l'image -->
                <div id="preview-container" class="mb-4 hidden">
                  <img id="preview" class="rounded-xl max-h-64 object-cover border border-gray-700" />
                </div>
                <!-- fin -->
                <div class="flex items-center gap-5 mb-4">

                  <!-- Champ fichier caché -->
                  <input type="file" name="media" id="media-input" accept="image/*,video/*" class="hidden" />
                  <!-- fin -->
                  <button type="button" id="upload-btn" class="p-2 hover:bg-blue-900/30 rounded-full transition-colors">
                    <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M3 5.5C3 4.119 4.119 3 5.5 3h13C19.881 3 21 4.119 21 5.5v13c0 1.381-1.119 2.5-2.5 2.5h-13C4.119 21 3 19.881 3 18.5v-13zM5.5 5c-.276 0-.5.224-.5.5v9.086l3-3 3 3 5-5 3 3V5.5c0-.276-.224-.5-.5-.5h-13zM19 15.414l-3-3-5 5-3-3-3 3V18.5c0 .276.224.5.5.5h13c.276 0 .5-.224.5-.5v-3.086zM9.75 7C8.784 7 8 7.784 8 8.75s.784 1.75 1.75 1.75 1.75-.784 1.75-1.75S10.716 7 9.75 7z"
                      />
                    </svg>
                  </button>

                </div>

                <!-- Bouton Poster -->
                <div class="flex items-center justify-end">
                  <button
                    type="submit"
                    class="bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-full py-2 px-6 text-sm transition-colors"
                  >
                    Poster
                </button>
                </div>
              </div>
            </div>
          </form>

          <!-- Tweet 3 - Christian Mwanya -->
          @each(tweet in tweets)
            <div class="border-b border-gray-700 p-4 hover:bg-gray-900/30 cursor-pointer transition-colors">
              <div class="flex gap-3">
                <div class="w-12 h-12 rounded-full bg-gray-600 flex-shrink-0">
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-1 mb-1">
                    <span class="font-bold">{{ tweet.user.fullname }}</span>
                    <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                      <path
                        d="M22.25 12c0-1.43-.88-2.67-2.19-3.34.46-1.39.2-2.9-.81-3.91s-2.52-1.27-3.91-.81c-.66-1.31-1.91-2.19-3.34-2.19s-2.67.88-3.33 2.19c-1.4-.46-2.91-.2-3.92.81s-1.26 2.52-.8 3.91c-1.31.67-2.2 1.91-2.2 3.34s.89 2.67 2.2 3.34c-.46 1.39-.21 2.9.8 3.91s2.52 1.26 3.91.81c.67 1.31 1.91 2.19 3.34 2.19s2.68-.88 3.34-2.19c1.39.45 2.9.2 3.91-.81s1.27-2.52.81-3.91c1.31-.67 2.19-1.91 2.19-3.34zm-11.71 4.2L6 11.67l1.4-1.4 3.14 3.14 6.22-6.22 1.4 1.4-7.62 7.61z"
                      />
                    </svg>
                    <span class="font-bold">{{ tweet.user.fullname }}</span>
                    <span class="text-gray-500">{{ `@${tweet.user.fullname}` }}</span>
                    <span class="text-gray-500">{{ tweet.createdAt.toFormat('dd LLL yyyy') }}</span>
                  </div>

                  <div class="mb-3">
                    <p>
                      {{ tweet.content }}
                    </p>
                    @if(tweet.mediaPath)
                      @if(tweet.mediaPath.endsWith('.mp4'))
                        <video controls class="rounded-lg mt-2 max-h-96 w-full object-cover">
                          <source src="/{{ tweet.mediaPath }}" type="video/mp4" />
                          Votre navigateur ne supporte pas la lecture vidéo.
                        </video>
                      @else
                        <img
                          src="/{{ tweet.mediaPath }}"
                          alt="Image du tweet"
                          class="rounded-lg mt-2 max-h-96 w-full object-cover"
                        />
                      @end
                    @end
                    
                    {{-- SECTION DES INTERACTIONS --}}
                    <div class="flex items-center justify-between max-w-md text-gray-500">
                      {{-- BOUTON COMMENTAIRE --}}
                      <div class="relative">
                        <button
                          onclick="toggleCommentSection('{{ tweet.id }}')"
                          class="flex items-center gap-2 hover:text-blue-500 group transition-colors"
                          type="button"
                        >
                          <div class="p-2 group-hover:bg-blue-900/30 rounded-full transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                              <path
                                d="M1.751 10c0-4.42 3.584-8 8.005-8h4.366c4.49 0 8.129 3.64 8.129 8.13 0 2.96-1.607 5.68-4.196 7.11l-8.054 4.46v-3.69h-.067c-4.49.1-8.183-3.51-8.183-8.01zm8.005-6c-3.317 0-6.005 2.69-6.005 6 0 3.37 2.77 6.08 6.138 6.01l.351-.01h1.761v2.3l5.087-2.81c1.951-1.08 3.163-3.13 3.163-5.36 0-3.39-2.744-6.13-6.129-6.13H9.756z"
                              />
                            </svg>
                          </div>
                          <span class="text-sm">{{ tweet.replies?.length || 0 }}</span>
                        </button>

                        {{-- SECTION COMMENTAIRES CACHÉE --}}
                        <div id="comment-section-{{ tweet.id }}" class="hidden mt-4 border-t border-gray-700 pt-3">

                          {{-- FORMULAIRE DE RÉPONSE --}}
                          <div class="flex gap-3 mb-4">
                            <div class="w-8 h-8 rounded-full bg-gray-600 flex-shrink-0">
                            </div>
                            <form action="{{ route('tweets.reply', { id: tweet.id }) }}" method="POST" class="flex-1">
                              {{ csrfField() }}
                            <input
                                type="text"
                                name="content"
                                placeholder="Postez votre réponse"
                                class="w-full bg-transparent border-b border-gray-600 pb-2 text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 transition-colors"
                                required
                              />
                              <div class="flex justify-end mt-2">
                                <button
                                  type="submit"
                                  class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-1.5 rounded-full text-sm font-medium transition-colors"
                                >
                                  Répondre
                                </button>
                              </div>
                            </form>
                          </div>

                          {{-- LISTE DES COMMENTAIRES EXISTANTS --}}
                          @if(tweet.replies && tweet.replies.length > 0)
                            <div class="space-y-4">
                              @each(reply in tweet.replies)
                                <div class="flex gap-3">
                                  <div class="w-8 h-8 rounded-full bg-gray-600 flex-shrink-0">
                                  </div>
                                  <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-1">
                                      <span class="font-bold text-sm text-white">{{ reply.user.fullname }}</span>
                                      <span class="text-gray-500 text-sm">{{ `@${reply.user.username}` }}</span>
                                      <span class="text-gray-500 text-sm">·</span>
                                      <span class="text-gray-500 text-sm">{{ reply.createdAt.toFormat('dd MMM') }}</span>
                                    </div>
                                    <p class="text-white text-sm">
                                      {{ reply.content }}
                                    </p>
                                  </div>
                                </div>
                              @end
                            </div>
                          @else
                            <div class="text-center text-gray-500 text-sm py-4">
                              Aucune réponse pour le moment. Soyez le premier à répondre !
                            </div>
                          @endif
                        </div>
                      </div>

                      {{-- BOUTON RETWEET (EXISTANT) --}}
                      <form action="{{ route('tweets.retweet',{id:tweet.id}) }}" method="POST">
                        {{ csrfField() }}
                        <button class="flex items-center gap-2 hover:text-green-500 group transition-colors">
                          <div class="p-2 group-hover:bg-green-900/30 rounded-full transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                              <path
                                d="M4.5 3.88l4.432 4.14-1.364 1.46L5.5 7.55V16c0 1.1.896 2 2 2H13v2H7.5c-2.209 0-4-1.79-4-4V7.55L1.432 9.48.068 8.02 4.5 3.88zM16.5 6H11V4h5.5c2.209 0 4 1.79 4 4v8.45l2.068-1.93 1.364 1.46-4.432 4.14-4.432-4.14 1.364-1.46 2.068 1.93V8c0-1.1-.896-2-2-2z"
                              />
                            </svg>
                          </div>
                          <span class="text-sm">{{ tweet.retweetsby?.length }}</span>
                        </button>
                      </form>

                      {{-- BOUTON LIKE (EXISTANT) --}}
                      <form action="{{ route('tweets.like', { id: tweet.id }) }}" method="POST">
                        {{ csrfField() }}
                        <button class="flex items-center space-x-1 hover:text-pink-500">
                          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                              d="M16.697 5.5c-1.222-.06-2.679.51-3.89 2.16l-.805 1.09-.806-1.09C9.984 6.01 8.526 5.44 7.304 5.5c-1.243.07-2.349.78-2.91 1.91-.552 1.12-.633 2.78.479 4.82 1.074 1.97 3.257 4.27 7.129 6.61 3.87-2.34 6.052-4.64 7.126-6.61 1.111-2.04 1.03-3.7.477-4.82-.561-1.13-1.666-1.84-2.908-1.91zm4.187 7.69c-1.351 2.48-4.001 5.12-8.379 7.67l-.503.3-.504-.3c-4.379-2.55-7.029-5.19-8.382-7.67-1.36-2.5-1.41-4.86-.514-6.67.887-1.79 2.647-2.91 4.601-3.01 1.651-.09 3.368.56 4.798 2.01 1.429-1.45 3.146-2.1 4.796-2.01 1.954.1 3.714 1.22 4.601 3.01.896 1.81.846 4.17-.514 6.67z"
                            />
                          </svg>
