    <!-- script pour apload un media avec preview -->
    <script>
      const uploadBtn = document.getElementById("upload-btn");

      const mediaInput = document.getElementById("media-input");

      const previewContainer = document.getElementById("preview-container");

      const preview = document.getElementById("preview");
      // Quand on clique sur l’icône, on ouvre la boîte de sélection de fichier

      uploadBtn.addEventListener("click", () => mediaInput.click());
      // Quand un fichier est sélectionné, on affiche un aperçu

      mediaInput.addEventListener("change", event => {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = e => {
            preview.src = e.target.result;
            previewContainer.classList.remove("hidden");
          };
          reader.readAsDataURL(file);
        }
      });
    </script>

    <script>
      function toggleCommentSection(tweetId) {
        const commentSection = document.getElementById(`comment-section-${tweetId}`);
        // Fermer toutes les autres sections de commentaire
        const allSections = document.querySelectorAll('[id^="comment-section-"]');
        allSections.forEach(section => {
          if (section.id !== `comment-section-${tweetId}`) {
            section.classList.add("hidden");
          }
        });
        // Basculer l'affichage de la section actuelle
        commentSection.classList.toggle("hidden");
      }
      // Fermer les sections de commentaire si on clique ailleurs

      document.addEventListener("click", function(event) {
        if (!event.target.closest('[id^="comment-section-"]') && !event.target.closest('button[onclick*="toggleCommentSection"]')) {
          const allSections = document.querySelectorAll('[id^="comment-section-"]');
          allSections.forEach(section => section.classList.add("hidden"));
        }
      });
    </script>
