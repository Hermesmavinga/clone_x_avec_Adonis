<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Modifier le profil - X
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
      
      body {
        font-family: 'Inter', sans-serif;
      }
      
      .glass-effect {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .fade-in {
        animation: fadeIn 0.3s ease-in-out;
      }
      
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
      
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .hide-scrollbar::-webkit-scrollbar {
        display: none;
      }
      
      .hide-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
      
      .input-focus:focus {
        box-shadow: 0 0 0 2px rgba(29, 155, 240, 0.3);
      }
    </style>
  </head>
  <body class="bg-black text-white min-h-screen">
    <div class="flex max-w-7xl mx-auto h-screen overflow-hidden">
      <!-- Sidebar gauche -->
      <aside class="w-72 p-4 border-r border-gray-800 hidden md:block hide-scrollbar sticky top-0 h-screen">
        <nav class="space-y-4 h-full flex flex-col">
          <div class="p-3 mb-1">
            <svg class="w-7 h-7" viewBox="0 0 24 24" fill="white">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              />
            </svg>
          </div>

          <a
            href="{{ route('dashboard') }}"
            class="flex items-center p-3 rounded-full hover:bg-gray-800 text-xl"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
              />
            </svg>
            <span class="ml-4">Accueil</span>
          </a>

          <a
            href="{{ route('profil.view') }}"
            class="flex items-center p-3 rounded-full hover:bg-gray-800 text-xl"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
              />
            </svg>
            <span class="ml-4">Profil</span>
          </a>

          <!-- User Profile at Bottom -->
          <div
            class="mt-auto mb-4 flex items-center gap-3 p-3 rounded-full hover:bg-gray-900 cursor-pointer transition-colors"
          >
            <div class="w-10 h-10 rounded-full bg-gray-600">
              @if(auth.user && auth.user.avatarUrl)
                <img src="{{ auth.user.avatarUrl }}" alt="Avatar" class="w-full h-full rounded-full object-cover" />
              @endif
            </div>
            <div class="flex-1">
              <div class="font-bold text-lg">
                @if(auth.isAuthenticated)
                  <p>
                    {{ auth.user.fullname }}
                  </p>
                @end
              </div>
              <div class="text-gray-500 text-sm">
                @if(auth.isAuthenticated)
                  <p>
                    {{ `@${auth.user.fullname}` }}
                  </p>
                @end
              </div>
            </div>
          </div>
        </nav>
      </aside>

      <!-- Contenu principal -->
      <main class="flex-1 overflow-y-auto hide-scrollbar">
        <!-- Header -->
        <div class="sticky top-0 z-50 bg-black/80 backdrop-blur-md border-b border-gray-800">
          <div class="max-w-2xl mx-auto px-4 py-4 flex items-center">
            <a
              href="{{ route('profil.view') }}"
              class="mr-4 p-2 rounded-full hover:bg-gray-800 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
            <div>
              <h1 class="text-xl font-bold">
                Modifier le profil
              </h1>
              <p class="text-gray-400 text-sm">
                Mettez à jour vos informations
              </p>
            </div>
          </div>
        </div>

        <!-- Formulaire d'édition -->
        <div class="max-w-2xl mx-auto px-4 py-8">
          <div class="glass-effect rounded-2xl overflow-hidden fade-in">
            <form
              action="{{ route('profiles.update') }}"
              method="post"
              enctype="multipart/form-data"
              class="space-y-8 p-6"
            >
              {{ csrfField() }}
            <input type="hidden" name="_method" value="PUT" />

              <!-- Section Bannière -->
              <div class="space-y-4">
                <h2 class="text-lg font-bold text-white">
                  Bannière du profil
                </h2>
                <div
                  class="relative h-48 bg-gradient-to-r from-blue-900/30 to-purple-900/30 rounded-xl overflow-hidden"
                >
                  <div class="absolute inset-0">
                    @if(auth.user && auth.user.bannerUrl)
                      <img
                        id="bannerPreview"
                        src="{{ auth.user.bannerUrl }}"
                        alt="Bannière"
                        class="w-full h-full object-cover"
                      />
                    @else
                      <div
                        class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center"
                      >
                        <svg class="w-16 h-16 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            fill-rule="evenodd"
                            d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                    @endif
                  </div>
                  <label
                    for="banner"
                    class="absolute inset-0 bg-black/40 flex items-center justify-center cursor-pointer hover:bg-black/50 transition-colors"
                  >
                    <div class="bg-black/60 rounded-full p-4">
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path
                          fill-rule="evenodd"
                          d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </div>
                  </label>
                  <input
                    type="file"
                    id="banner"
                    name="banner"
                    accept="image/*"
                    class="hidden"
                    onchange="previewImage(this, 'bannerPreview')"
                  />
                </div>
                <p class="text-gray-400 text-sm">
                  Recommandé : 1500x500 pixels. Max 5MB
                </p>
              </div>

              <!-- Section Avatar -->
              <div class="space-y-4">
                <h2 class="text-lg font-bold text-white">
                  Photo de profil
                </h2>
                <div class="flex items-center gap-6">
                  <div class="relative">
                    <img
                      id="avatarPreview"
                      src="{{ auth.user && auth.user.avatarUrl ? auth.user.avatarUrl : '/assets/default-avatar.jpg' }}"
                      alt="Avatar"
                      class="w-32 h-32 rounded-full border-4 border-gray-800 object-cover"
                    />
                    <label for="avatar" class="absolute bottom-2 right-2 cursor-pointer">
                      <div class="bg-gray-800 rounded-full p-3 hover:bg-gray-700 transition-colors">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            fill-rule="evenodd"
                            d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                    </label>
                    <input
                      type="file"
                      id="avatar"
                      name="avatar"
                      accept="image/*"
                      class="hidden"
                      onchange="previewImage(this, 'avatarPreview')"
                    />
                  </div>
                  <div class="flex-1">
                    <p class="text-gray-400 text-sm">
                      Recommandé : 400x400 pixels. Max 2MB
                    </p>
                    <p class="text-gray-500 text-xs mt-2">
                      Choisissez une image qui vous représente bien
                    </p>
                  </div>
                </div>
              </div>

              <!-- Informations de base -->
              <div class="space-y-6 pt-4 border-t border-gray-800">
                <h2 class="text-lg font-bold text-white">
                  Informations personnelles
                </h2>

                <!-- Nom complet -->
                <div class="space-y-2">
                  <label for="fullname" class="block text-sm font-medium text-gray-300">
                    Nom complet *
                </label>
                  <input
                    type="text"
                    id="fullname"
                    name="fullname"
                    value="{{ auth.user ? auth.user.fullname : '' }}"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                    placeholder="Votre nom complet"
                    required
                  />
                </div>

                <!-- Bio -->
                <div class="space-y-2">
                  <label for="bio" class="block text-sm font-medium text-gray-300">
                    Bio
                </label>
                  <textarea
                    id="bio"
                    name="bio"
                    rows="4"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none transition-colors"
                    placeholder="Parlez de vous..."
                    oninput="updateBioCounter(this)"
                  >{{ auth.user ? auth.user.bio : '' }}</textarea>
                  <div class="flex justify-between items-center">
                    <p class="text-gray-500 text-xs">
                      Décrivez-vous en quelques mots
                    </p>
                    <span id="bioCounter" class="text-gray-400 text-xs">0/160</span>
                  </div>
                </div>

                <!-- Localisation -->
                <div class="space-y-2">
                  <label for="location" class="block text-sm font-medium text-gray-300">
                    Localisation
                </label>
                  <input
                    type="text"
                    id="location"
                    name="location"
                    value="{{ auth.user && auth.user.location ? auth.user.location : '' }}"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                    placeholder="Ville, Pays"
                  />
                </div>

                <!-- Site web -->
                <div class="space-y-2">
                  <label for="website" class="block text-sm font-medium text-gray-300">
                    Site web
                </label>
                  <input
                    type="url"
                    id="website"
                    name="website"
                    value="{{ auth.user && auth.user.website ? auth.user.website : '' }}"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                    placeholder="https://exemple.com"
                  />
                </div>
              </div>

              <!-- Sécurité -->
              <div class="space-y-6 pt-4 border-t border-gray-800">
                <h2 class="text-lg font-bold text-white">
                  Sécurité
                </h2>

                <!-- Email (lecture seule) -->
                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-300">
                    Adresse email
                </label>
                  <div class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-400">
                    {{ auth.user ? auth.user.email : '' }}
                  </div>
                  <p class="text-gray-500 text-xs">
                    L'adresse email ne peut pas être modifiée
                  </p>
                </div>

                <!-- Nouveau mot de passe -->
                <div class="space-y-2">
                  <label for="newPassword" class="block text-sm font-medium text-gray-300">
                    Nouveau mot de passe
                </label>
                  <input
                    type="password"
                    id="newPassword"
                    name="newPassword"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                    placeholder="Laisser vide pour ne pas changer"
                  />
                  <p class="text-gray-500 text-xs">
                    Minimum 8 caractères avec chiffres et lettres
                  </p>
                </div>

                <!-- Confirmer mot de passe -->
                <div class="space-y-2">
                  <label for="confirmPassword" class="block text-sm font-medium text-gray-300">
                    Confirmer le mot de passe
                </label>
                  <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                    placeholder="Confirmer le nouveau mot de passe"
                  />
                </div>
              </div>

              <!-- Boutons d'action -->
              <div class="flex justify-end gap-4 pt-6 border-t border-gray-800">
                <a
                  href="{{ route('profil.view') }}"
                  class="px-6 py-3 border border-gray-700 rounded-full text-white hover:bg-gray-800 transition-colors font-medium"
                >
                  Annuler
              </a>
                <button
                  type="submit"
                  class="px-6 py-3 bg-blue-500 hover:bg-blue-600 rounded-full text-white font-medium transition-colors"
                >
                  Enregistrer les modifications
              </button>
              </div>
            </form>
          </div>

          <!-- Message d'information -->
          <div class="mt-6 glass-effect rounded-2xl p-6 fade-in">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                />
              </svg>
              <div>
                <h3 class="font-medium text-white">
                  Conseils pour votre profil
                </h3>
                <ul class="mt-2 space-y-1 text-gray-400 text-sm">
                  <li class="flex items-center gap-2">
                    <span class="w-1 h-1 bg-gray-500 rounded-full"></span>
                    Utilisez une photo claire et récente
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-1 h-1 bg-gray-500 rounded-full"></span>
                    Ajoutez une bio qui reflète votre personnalité
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-1 h-1 bg-gray-500 rounded-full"></span>
                    Vérifiez que toutes les informations sont exactes
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script>
      // Prévisualisation des images
      function previewImage(input, previewId) {
        const preview = document.getElementById(previewId);
        if (input.files && input.files[0]) {
          const reader = new FileReader();
          reader.onload = function(e) {
            preview.src = e.target.result;
          };
          reader.readAsDataURL(input.files[0]);
        }
      }
      // Compteur de caractères pour la bio

      function updateBioCounter(textarea) {
        const counter = document.getElementById("bioCounter");
        const length = textarea.value.length;
        counter.textContent = `${length}/160`;
        if (length > 160) {
          counter.classList.add("text-red-400");
        } else {
          counter.classList.remove("text-red-400");
        }
      }
      // Initialiser le compteur de bio

      document.addEventListener("DOMContentLoaded", function() {
        const bioTextarea = document.getElementById("bio");
        if (bioTextarea) {
          updateBioCounter(bioTextarea);
        }
        // Validation du formulaire
        const form = document.querySelector("form");
        if (form) {
          form.addEventListener("submit", function(e) {
            const fullname = document.getElementById("fullname").value.trim();
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const bio = document.getElementById("bio").value;
            // Validation du nom complet
            if (!fullname) {
              e.preventDefault();
              alert("Le nom complet est requis");
              return;
            }
            // Validation des mots de passe
            if (newPassword || confirmPassword) {
              if (newPassword !== confirmPassword) {
                e.preventDefault();
                alert("Les mots de passe ne correspondent pas");
                return;
              }
              if (newPassword.length > 0 && newPassword.length < 8) {
                e.preventDefault();
                alert("Le mot de passe doit contenir au moins 8 caractères");
                return;
              }
            }
            // Validation de la bio
            if (bio.length > 160) {
              e.preventDefault();
              alert("La bio ne peut pas dépasser 160 caractères");
              return;
            }
          });
        }
      });
    </script>
  </body>
</html>
