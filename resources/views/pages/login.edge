<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Connectez-vous à X
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
  </head>

  <body class="bg-black flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-2xl w-full max-w-[600px] min-h-[650px] relative p-8 mx-4">
      <!-- X Logo -->
      <div class="flex justify-center mb-6">
        <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
          />
        </svg>
      </div>

      <!-- Title -->
      <h1 class="text-3xl font-bold text-center mb-8">
        Connectez-vous à X
      </h1>

      <!-- Google Button -->
      <button
        class="w-full bg-white border border-gray-300 rounded-full py-2 px-4 flex items-center justify-center gap-2 mb-2 hover:bg-gray-50 transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path
            fill="#4285F4"
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
          />
          <path
            fill="#34A853"
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
          />
          <path
            fill="#FBBC05"
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
          />
          <path
            fill="#EA4335"
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
          />
        </svg>
        <span class="text-sm font-medium">Se connecter avec Google</span>
      </button>

      <!-- Apple Button -->
      <button
        class="w-full bg-white border border-gray-300 rounded-full py-2 px-4 flex items-center justify-center gap-2 mb-4 hover:bg-gray-50 transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
          />
        </svg>
        <span class="text-sm font-medium">Se connecter avec Apple</span>
      </button>

      <!-- Divider -->
      <div class="flex items-center my-4">
        <div class="flex-1 border-t border-gray-300">
        </div>
        <span class="px-4 text-sm text-gray-500">ou</span>
        <div class="flex-1 border-t border-gray-300">
        </div>
      </div>

      <!-- FORMULAIRE DE CONNEXION -->
      <form action="/login" method="post">
        {{ csrfField() }}
        <!-- Email Input -->
        <div class="mb-6">
          <input
            type="email"
            name="email"
            placeholder="Adresse e-mail"
            required
            class="w-full border border-gray-300 rounded px-4 py-3 text-base focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
          />
        </div>

        <!-- Password Input -->
        <div class="mb-6">
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            required
            class="w-full border border-gray-300 rounded px-4 py-3 text-base focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-black text-white rounded-full py-2 mb-5 font-bold hover:bg-gray-900 transition-colors"
        >
          Suivant
        </button>
      </form>

      <!-- Forgot Password Button -->
      <button
        class="w-full bg-white border border-gray-300 rounded-full py-2 mb-10 font-medium hover:bg-gray-50 transition-colors"
      >
        Mot de passe oublié ?
      </button>

      <!-- Sign Up Link -->

      <p class="text-gray-600 text-[15px]">
        Vous n'avez pas de compte ?
        <a href="/signupView" class="text-blue-500 hover:underline">Inscrivez-vous</a>
      </p>
    </div>
  </body>
</html>

