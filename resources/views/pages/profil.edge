      <!-- Contenu principal -->
      <main class="flex-1 main-content hide-scrollbar">
        <div class="sticky top-0 z-50 bg-black bg-opacity-80 backdrop-blur-md border-b border-gray-800">
          <div class="max-w-4xl mx-auto px-4 py-3 flex items-center">
            <button onclick="history.back()" class="mr-8 p-2 rounded-full hover:bg-gray-900 transition">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                  clip-rule="evenodd"
                />

              </svg>
            </button>
            <div>
              <h1 id="nav-fullname" class="font-bold text-xl">
                Profil
              </h1>
              <p id="nav-tweet-count" class="text-gray-400 text-sm">
                0 Tweets
              </p>
            </div>
          </div>
        </div>

        <div class="max-w-4xl mx-auto">
          <!-- Header utilisateur -->
          <div class="relative">
            <img src="assets/téléchargement.jpg" alt="Bannière" class="w-full h-60 object-cover" />
            <div class="absolute -bottom-16 left-6">
              <img
                id="avatar"
                src="assets/téléchargement.jpg"
                alt="Avatar"
                class="w-32 h-32 rounded-full border-4 border-black object-cover shadow-lg"
              />
            </div>
            <!-- Bouton Éditer le profil -->
            <div class="absolute bottom-4 right-4">
              <button
                class="bg-black bg-opacity-50 text-white px-6 py-2 rounded-full border border-gray-600 hover:bg-opacity-70 transition"
              >
                Éditer le profil
              </button>
            </div>
          </div>

          <!-- Infos utilisateur -->
          <div class="mt-20 px-6">
            <div class="flex items-center mb-1">
              <h1 id="fullname" class="text-2xl font-bold">
                {{ user.fullname }}
              </h1>
              <span id="verified-badge" class="verified-badge ml-2" style="display: none">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />

                </svg>
              </span>
            </div>
            <p id="username" class="text-gray-400 mb-3">
              {{ `@${auth.user.fullname}` }}
            </p>
            <p id="bio" class="mb-4 text-sm leading-relaxed">
            </p>

            <div class="flex flex-wrap items-center gap-6 text-sm text-gray-400 mb-4">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                    clip-rule="evenodd"
                  />

                </svg>
                <span id="location">Kinshasa, DRC</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                    clip-rule="evenodd"
                  />

                </svg>
                <span id="createdAt">A rejoint en mars 2021</span>
              </div>
            </div>

            <div class="flex gap-6 text-sm">
              <a href="#" class="hover:underline">
                <span id="following">                  <strong>{{ user.following.length }}</strong>
                  <span class="text-gray-400">abonnements</span></span>
              </a>
              <a href="#" class="hover:underline">
                <span id="followers">                  <strong>{{ user.followers.length }}</strong>
                  <span class="text-gray-400">abonnés</span></span>
              </a>
            </div>
          </div>

          <!-- Navigation des onglets -->
          <div class="mt-8 border-b border-gray-800">
            <div class="flex">
              <button class="px-6 py-4 font-semibold border-b-2 border-twitter-blue text-white">
                Tweets
              </button>
              <button class="px-6 py-4 font-semibold text-gray-400 hover:text-white transition">
                Réponses
              </button>
              <button class="px-6 py-4 font-semibold text-gray-400 hover:text-white transition">
                Médias
              </button>
              <button class="px-6 py-4 font-semibold text-gray-400 hover:text-white transition">
                J'aime
              </button>
            </div>
          </div>

          <!-- Zone des tweets -->
          <div class="px-6">
            <div id="loading-spinner" class="flex justify-center my-12">
              <div class="loader ease-linear rounded-full border-4 border-t-4 border-gray-700 h-12 w-12">
              </div>
            </div>
            <div id="user-tweets" class="divide-y divide-gray-800">
              @if(tweets && tweets.length > 0)
                @each(tweet in tweets)
                  <div class="border-b border-gray-700 p-4 hover:bg-gray-900/30 cursor-pointer transition-colors">
                    <div class="flex gap-3">
                      <img
                        src="{{ tweet.user.avatar || 'assets/téléchargement.jpg' }}"
                        alt="Avatar"
                        class="w-12 h-12 rounded-full flex-shrink-0 object-cover"
                      />
                      <div class="flex-1">
                        <div class="flex items-center gap-1 mb-1">
                          <span class="font-bold">{{ tweet.user.fullname }}</span>
                          @if(tweet.user.isVerified)
                            <span class="verified-badge ml-2">
                              <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path
                                  fill-rule="evenodd"
                                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                  clip-rule="evenodd"
                                />
                              </svg>
                            </span>
                          @end
                          <span class="text-gray-500">@{{ tweet.user.username || tweet.user.fullname.toLowerCase() }}</span>
                          <span class="text-gray-500">·</span>
                          <span class="text-gray-500">{{ tweet.createdAt.toFormat('dd LLL yyyy') }}</span>
                        </div>

                        <!-- Indicateur de retweet -->
                        @if(tweet.$extras && tweet.$extras.isRetweet)
                          <div class="text-gray-500 text-sm mb-1 flex items-center">
                            <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                              <path
                                d="M4.5 3.88l4.432 4.14-1.364 1.46L5.5 7.55V16c0 1.1.896 2 2 2H13v2H7.5c-2.209 0-4-1.79-4-4V7.55L1.432 9.48.068 8.02 4.5 3.88zM16.5 6H11V4h5.5c2.209 0 4 1.79 4 4v8.45l2.068-1.93 1.364 1.46-4.432 4.14-4.432-4.14 1.364-1.46 2.068 1.93V8c0-1.1-.896-2-2-2z"
                              />
                            </svg>
                            Retweeté par {{ tweet.$extras.retweetedBy }}
                          </div>
                        @end
                        
                        <div class="mb-3">
                          <p class="text-white">
                            {{ tweet.content }}
                          </p>

                          @if(tweet.mediaPath)
                            @if(tweet.mediaPath.endsWith('.mp4'))
                              <video controls class="rounded-lg mt-2 max-h-96 w-full object-cover">
                                <source src="/{{ tweet.mediaPath }}" type="video/mp4" />
                                Votre navigateur ne supporte pas la lecture vidéo.
                              </video>
                            @else
                              <img
                                src="/{{ tweet.mediaPath }}"
                                alt="Image du tweet"
                                class="rounded-lg mt-2 max-h-96 w-full object-cover"
                              />
                            @end
                          @end
                          
                          <!-- Section des interactions -->
                          <div class="flex items-center justify-between max-w-md text-gray-500 mt-3">
                            <!-- Vos boutons d'interaction existants -->
                            <!-- ... -->
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                @end
              @else
                <div class="text-center py-8 text-gray-500">
                  <p>
                    Aucun tweet à afficher pour le moment.
                  </p>
                </div>
              @end
            </div>
          </div>
        </div>
      </main>

      <!-- Sidebar droite -->
      <aside class="w-80 p-4 border-l border-gray-800 hidden lg:block sticky-sidebar hide-scrollbar">
        <div class="mb-6">
          <input
            type="text"
            placeholder="Rechercher"
            class="w-full px-4 py-2 rounded-full bg-gray-800 text-white placeholder-gray-400"
          />
        </div>

        <div class="bg-[#16181c] rounded-xl overflow-hidden mb-6">
          <h2 class="text-xl font-bold px-4 py-3">
            Ce qui se passe
          </h2>
          <div class="px-4 py-2 hover:bg-[#1e1f23] cursor-pointer">
            <p class="text-sm text-gray-400">
