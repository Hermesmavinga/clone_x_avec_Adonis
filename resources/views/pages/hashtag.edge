<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Hashtag #{{ hashtag.texteHashtag }}
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js">

    </script>
  </head>
  <body class="bg-black w-full flex flex-col min-h-screen">
    <main class="w-full max-w-2xl mx-auto">
      <!-- En-tête du hashtag -->
      <div
        class="sticky top-0 bg-black bg-opacity-80 backdrop-blur-md text-white p-4 border-b border-gray-700 z-50"
      >
        <div class="flex flex-col">
          <div class="flex items-center gap-3">
            <a href="javascript:history.back()" class="text-white hover:text-gray-300">
              <i data-lucide="arrow-left" class="w-5 h-5"></i>
            </a>
            <h1 class="text-xl font-bold">
              #{{ hashtag.texteHashtag }}
            </h1>
          </div>
          <p class="text-gray-400 text-sm mt-1">
            {{ hashtag.tweets.length }} tweets
          </p>
        </div>
      </div>

      <!-- Section des tweets -->
      <section class="hashtag_tweets flex flex-col">
        @if(hashtag.tweets && hashtag.tweets.length > 0)
          @each(tweet in hashtag.tweets)
            <div
              class="tweet border-b border-gray-700 p-4 mb-4 text-white hover:bg-gray-800 transition rounded-lg"
            >

              <!-- Header tweet -->
              <div class="flex items-center gap-3 mb-2">
                <img
                  src="{{ tweet.user.photoProfil || tweet.user.avatar || 'https://abs.twimg.com/sticky/default_profile_images/default_profile_400x400.png' }}"
                  alt="avatar"
                  class="w-8 h-8 sm:w-10 sm:h-10 rounded-full object-cover"
                />
                <span class="font-semibold text-sm sm:text-base">
                  {{ tweet.user.nom || tweet.user.fullname || tweet.user.username }}
                </span>
                <span class="text-gray-400 text-sm">@{{ tweet.user.username || tweet.user.fullname }}</span>
                <span class="text-gray-400">·</span>
                <span class="text-gray-400 text-sm">{{ tweet.created_at }}</span>
              </div>

              <!-- Contenu tweet -->
              <div class="mb-3">
                <p class="text-white text-sm sm:text-base leading-relaxed">
                  {{{ tweet.contentClean || tweet.content }}}
                </p>
              </div>

              <!-- Médias -->
              @if(tweet.mediaPath || (tweet.medias && tweet.medias.length > 0))
                <div class="medias flex flex-wrap gap-2 mt-2">
                  @if(tweet.mediaPath)
                    <!-- Ancien format mediaPath -->
                    @if(tweet.mediaPath.match(/\.(mp4|avi|mov|webm)$/i))
                      <video controls class="rounded-2xl max-w-full max-h-96">
                        <source src="/{{ tweet.mediaPath }}" />
                      </video>
                    @else
                      <img
                        src="/{{ tweet.mediaPath }}"
                        alt="Image du tweet"
                        class="rounded-2xl max-w-full max-h-96 object-cover"
                      />
                    @endif
                  @else
                    <!-- Nouveau format medias array -->
                    @each(media in tweet.medias)
                      @if(media.type === 'image' || media.url.match(/\.(jpg|jpeg|png|gif)$/i))
                        <img src="{{ media.url }}" alt="Image du tweet" class="rounded-2xl max-w-full max-h-96 object-cover" />
                      @else
                        <video controls class="rounded-2xl max-w-full max-h-96">
                          <source src="{{ media.url }}" />
                        </video>
                      @endif
                    @endeach
                  @endif
                </div>
              @endif
              
              <!-- Hashtags -->
              @if(tweet.hashtags && tweet.hashtags.length > 0)
                <div class="hashtags mt-2 flex flex-wrap gap-1 sm:gap-2">
                  @each(tag in tweet.hashtags)
                    <a href="/hashtag/{{ tag.texteHashtag }}" class="text-blue-400 hover:underline text-xs sm:text-sm">
                      #{{ tag.texteHashtag }}
                    </a>
                  @endeach
                </div>
              @endif
              
                {{-- SECTION DES INTERACTIONS --}}
                    <div class="flex items-center justify-between max-w-md text-gray-500">
                      {{-- BOUTON COMMENTAIRE --}}
                      <div class="relative">
                        <button
                          onclick="toggleCommentSection('{{ tweet.id }}')"
                          class="flex items-center gap-2 hover:text-blue-500 group transition-colors"
                          type="button"
                        >
                          <div class="p-2 group-hover:bg-blue-900/30 rounded-full transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                              <path
                                d="M1.751 10c0-4.42 3.584-8 8.005-8h4.366c4.49 0 8.129 3.64 8.129 8.13 0 2.96-1.607 5.68-4.196 7.11l-8.054 4.46v-3.69h-.067c-4.49.1-8.183-3.51-8.183-8.01zm8.005-6c-3.317 0-6.005 2.69-6.005 6 0 3.37 2.77 6.08 6.138 6.01l.351-.01h1.761v2.3l5.087-2.81c1.951-1.08 3.163-3.13 3.163-5.36 0-3.39-2.744-6.13-6.129-6.13H9.756z"
                              />
                            </svg>
                          </div>
                          <span class="text-sm">{{ tweet.replies?.length || 0 }}</span>
                        </button>

                        {{-- SECTION COMMENTAIRES CACHÉE --}}
                        <div id="comment-section-{{ tweet.id }}" class="hidden mt-4 border-t border-gray-700 pt-3">

                          {{-- FORMULAIRE DE RÉPONSE --}}
                          <div class="flex gap-3 mb-4">
                            <div class="w-8 h-8 rounded-full bg-gray-600 flex-shrink-0">
                            </div>
                            <form action="{{ route('tweets.reply', { id: tweet.id }) }}" method="POST" class="flex-1">
                              {{ csrfField() }}
                            <input
                                type="text"
                                name="content"
                                placeholder="Postez votre réponse"
                                class="w-full bg-transparent border-b border-gray-600 pb-2 text-white placeholder-gray-500 focus:outline-none focus:border-blue-500 transition-colors"
                                required
                              />
                              <div class="flex justify-end mt-2">
                                <button
                                  type="submit"
                                  class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-1.5 rounded-full text-sm font-medium transition-colors"
                                >
                                  Répondre
                                </button>
                              </div>
                            </form>
                          </div>

                          {{-- LISTE DES COMMENTAIRES EXISTANTS --}}
                          @if(tweet.replies && tweet.replies.length > 0)
                            <div class="space-y-4">
                              @each(reply in tweet.replies)
                                <div class="flex gap-3">
                                  <div class="w-8 h-8 rounded-full bg-gray-600 flex-shrink-0">
                                  </div>
                                  <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-1">
                                      <span class="font-bold text-sm text-white">{{ reply.user.fullname }}</span>
                                      <span class="text-gray-500 text-sm">{{ `@${reply.user.username}` }}</span>
                                      <span class="text-gray-500 text-sm">·</span>
                                      <span class="text-gray-500 text-sm">{{ reply.createdAt.toFormat('dd MMM') }}</span>
                                    </div>
                                    <p class="text-white text-sm">
                                      {{ reply.content }}
                                    </p>
                                  </div>
                                </div>
                              @end
                            </div>
                          @else
                            <div class="text-center text-gray-500 text-sm py-4">
                              Aucune réponse pour le moment. Soyez le premier à répondre !
                            </div>
                          @endif
                        </div>
                      </div>

                      {{-- BOUTON RETWEET (EXISTANT) --}}
                      <form action="{{ route('tweets.retweet',{id:tweet.id}) }}" method="POST">
                        {{ csrfField() }}
                        <button class="flex items-center gap-2 hover:text-green-500 group transition-colors">
                          <div class="p-2 group-hover:bg-green-900/30 rounded-full transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                              <path
                                d="M4.5 3.88l4.432 4.14-1.364 1.46L5.5 7.55V16c0 1.1.896 2 2 2H13v2H7.5c-2.209 0-4-1.79-4-4V7.55L1.432 9.48.068 8.02 4.5 3.88zM16.5 6H11V4h5.5c2.209 0 4 1.79 4 4v8.45l2.068-1.93 1.364 1.46-4.432 4.14-4.432-4.14 1.364-1.46 2.068 1.93V8c0-1.1-.896-2-2-2z"
                              />
                            </svg>
                          </div>
                          <span class="text-sm">{{ tweet.retweetsby?.length }}</span>
                        </button>
                      </form>

                      {{-- BOUTON LIKE (EXISTANT) --}}
                      <form action="{{ route('tweets.like', { id: tweet.id }) }}" method="POST">
                        {{ csrfField() }}
                        <button class="flex items-center space-x-1 hover:text-pink-500">
                          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                              d="M16.697 5.5c-1.222-.06-2.679.51-3.89 2.16l-.805 1.09-.806-1.09C9.984 6.01 8.526 5.44 7.304 5.5c-1.243.07-2.349.78-2.91 1.91-.552 1.12-.633 2.78.479 4.82 1.074 1.97 3.257 4.27 7.129 6.61 3.87-2.34 6.052-4.64 7.126-6.61 1.111-2.04 1.03-3.7.477-4.82-.561-1.13-1.666-1.84-2.908-1.91zm4.187 7.69c-1.351 2.48-4.001 5.12-8.379 7.67l-.503.3-.504-.3c-4.379-2.55-7.029-5.19-8.382-7.67-1.36-2.5-1.41-4.86-.514-6.67.887-1.79 2.647-2.91 4.601-3.01 1.651-.09 3.368.56 4.798 2.01 1.429-1.45 3.146-2.1 4.796-2.01 1.954.1 3.714 1.22 4.601 3.01.896 1.81.846 4.17-.514 6.67z"
                            />
                          </svg>
                          <span>{{ tweet.likes.length }}</span>
                        </button>
                      </form>

                      {{-- BOUTON PARTAGER (EXISTANT) --}}
                      <button class="hover:text-blue-500 group transition-colors">
                        <div class="p-2 group-hover:bg-blue-900/30 rounded-full transition-colors">
                          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                              d="M12 2.59l5.7 5.7-1.41 1.42L13 6.41V16h-2V6.41l-3.3 3.3-1.41-1.42L12 2.59zM21 15l-.02 3.51c0 1.38-1.12 2.49-2.5 2.49H5.5C4.11 21 3 19.88 3 18.5V15h2v3.5c0 .28.22.5.5.5h12.98c.28 0 .5-.22.5-.5L19 15h2z"
                            />
                          </svg>
                        </div>
                      </button>

                      {{-- BOUTON SUPPRIMER (EXISTANT) --}}
                      @if(tweet.userId === auth.user.id)
                        <form
                          action="{{ route('tweets.delete', [tweet.id]) }}"
                          onsubmit="return confirm('Voulez-vous vraiment supprimer ce tweet ?')"
                          method="POST"
                        >
                          {{ csrfField() }}
                          <button class="hover:text-blue-500 group transition-colors">
                            <div class="p-2 group-hover:bg-red-900/30 rounded-full transition-colors">
                              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                <path
                                  d="M3 6h18v2H3V6zm2 3h14l-1.5 12.5c-.1.83-.77 1.5-1.6 1.5H8.1c-.83 0-1.5-.67-1.6-1.5L5 9zm5 2v9h2v-9H10zm4 0v9h2v-9h-2zM9 4V3h6v1h5v2H4V4h5z"
                                />
                              </svg>
                            </div>
                          </button>
                        </form>
                      @end
                    </div>
                  </div>
                </div>
              </div>
            </div>
          @end
            
        </div>

        <!-- Sidebar Right -->
        <div class="w-[350px] flex-shrink-0 ml-8 py-2">
          <!-- Search Box -->
          <div class="sticky top-0 bg-black pt-1 pb-3">
            <div class="bg-gray-900 rounded-full flex items-center px-4 py-3">
              <svg class="w-5 h-5 text-gray-500" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M10.25 3.75c-3.59 0-6.5 2.91-6.5 6.5s2.91 6.5 6.5 6.5c1.795 0 3.419-.726 4.596-1.904 1.178-1.177 1.904-2.801 1.904-4.596 0-3.59-2.91-6.5-6.5-6.5zm-8.5 6.5c0-4.694 3.806-8.5 8.5-8.5s8.5 3.806 8.5 8.5c0 1.986-.682 3.815-1.824 5.262l4.781 4.781-1.414 1.414-4.781-4.781c-1.447 1.142-3.276 1.824-5.262 1.824-4.694 0-8.5-3.806-8.5-8.5z"
                />
              </svg>
              <input
                type="text"
                placeholder="Chercher"
                class="bg-transparent ml-4 outline-none flex-1 text-white placeholder-gray-500"
              />
            </div>
          </div>
          @endeach
        @else
          <div class="text-center text-gray-500 py-12">
            <i data-lucide="hash" class="w-16 h-16 mx-auto mb-4 text-gray-600"></i>
            <p class="text-lg">
              Aucun tweet trouvé avec ce hashtag
            </p>
            <p class="text-sm mt-2">
              Soyez le premier à utiliser #{{ hashtag.texteHashtag }}
            </p>
          </div>
        @endif
      </section>
    </main>

    <script>
      // Initialisation des icônes Lucide
      lucide.createIcons();
    </script>

    <!-- Script pour les likes -->
    <script>
      document.querySelectorAll(".like-btn").forEach(btn => {
        btn.addEventListener("click", async e => {
          e.preventDefault();
          const form = btn.closest("form");
          const tweetId = btn.dataset.tweetId;
          const countEl = btn.querySelector(".like-count");
          const heartEl = btn.querySelector("i");
          try {
            const res = await fetch(form.action, {
              method: "POST",
              headers: {
                "X-Requested-With": "XMLHttpRequest",
                "X-CSRF-TOKEN": "{{ csrfToken }}"
              }
            });
            const data = await res.json();
            if (data.success) {
              let count = parseInt(countEl.textContent);
              if (data.action === "liked") {
                countEl.textContent = count + 1;
                heartEl.classList.remove("text-gray-400");
                heartEl.classList.add("text-pink-400");
              } else if (data.action === "unliked") {
                countEl.textContent = Math.max(0, count - 1);
                heartEl.classList.remove("text-pink-400");
                heartEl.classList.add("text-gray-400");
              }
            }
          } catch (err) {
            console.error("Erreur like:", err);
          }
        });
      });
    </script>

    <!-- Script pour les retweets -->
    <script>
      document.querySelectorAll(".retweet-btn").forEach(btn => {
        btn.addEventListener("click", async e => {
          e.preventDefault();
          const form = btn.closest("form");
          const countEl = btn.querySelector(".retweet-count");
          const iconEl = btn.querySelector("i");
          try {
            const res = await fetch(form.action, {
              method: "POST",
              headers: {
                "X-Requested-With": "XMLHttpRequest",
                "X-CSRF-TOKEN": "{{ csrfToken }}"
              }
            });
            const data = await res.json();
            let count = Number(countEl.textContent);
            if (data.action === "retweeted") {
              countEl.textContent = count + 1;
              iconEl.classList.replace("text-gray-400", "text-green-400");
            } else {
              countEl.textContent = Math.max(0, count - 1);
              iconEl.classList.replace("text-green-400", "text-gray-400");
            }
          } catch (err) {
            console.error("Erreur retweet:", err);
          }
        });
      });
    </script>

    <!-- Script pour les réponses -->
    <script>
      document.querySelectorAll(".reply-btn").forEach(btn => {
        btn.addEventListener("click", () => {
          const tweetId = btn.dataset.tweetId;
          window.location.href = `/tweets/${tweetId}/reply`;
        });
      });
    </script>
  </body>
</html>
